<Window x:Class="Kraut.LoggerLib.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kraut.LoggerLib"
        mc:Ignorable="d"
        Title="ConsoleWindow" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="2" Margin="10,10,10,10"/>
        <TextBlock x:Name="txtConsole" Margin="12" TextWrapping="NoWrap" Background="White"/>
        <Frame Content="Frame" Margin="10,10,10,10" Width="2"/>
    </Grid>
</Window>
